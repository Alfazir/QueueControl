@model IEnumerable<QueueControlServer.Models.Queue>

@{
    ViewData["Title"] = "QueuesList";
    Layout = "_Layout.cshtml";
}

<h1>Список очередей:</h1>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<p>
</p>
<table class="table  table-hover">
    <thead>
        <tr>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-lg btn-outline-info btn-block" id="QueueName" asp-controller="QueueItems" asp-action="QueueItemsList" asp-route-QueueName="@item.QueueName" asp-route-Factory ="@item.Factory.OrganizationName"><h1><font size="7">@item.QueueName  @if (User.IsInRole("admin")) @item.Factory.OrganizationName</font></h1></a>
                </td>
            </tr>
        }
    </tbody>
</table>
