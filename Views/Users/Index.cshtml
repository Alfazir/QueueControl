@model IEnumerable<QueueControlServer.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

@*<a asp-action="Create">Добавить пользователя</a>*@

<a class="btn btn-sm btn-success" asp-action="CreateLocalAdmin">Добавить администратора организации</a>
<a class="btn btn-sm btn-success" asp-action="CreateTerminal">Добавить терминал</a>
<a class="btn btn-sm btn-success" asp-action="CreateDriver">Добавить водителя</a>
<a class="btn btn-sm btn-success" asp-action="CreateSupervisor">Добавить супервизора</a>

<table class="table">
    <tr><th>Email</th><th>Год</th><th></th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.Email</td>
    <td>@user.Year</td>
    <td>@user.UserType</td>
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Удалить
            </button>
        </form>
    </td>
</tr>
    }
</table>


